{
  "agents": {
    "defaults": {
      "model": {
        "primary": "zai/glm-4.7"
      },
      "models": { "zai/glm-4.7": {} },
      "thinkingDefault": "low",
      "elevatedDefault": "off",
      "verboseDefault": "off",
      "workspace": "~/.openclaw/workspace",
      "sandbox": {
        "mode": "all"
      }
    },
    "list": [
      {
        "id": "welcome",
        "name": "Welcome Agent",
        "default": true,
        "workspace": "~/.openclaw/workspace-welcome"
      }
    ]
  },
  "commands": {
    "text": false
  },
  "bindings": [],
  "channels": {
    "whatsapp": {
      "allowFrom": ["*"],
      "dmPolicy": "allowlist"
    }
  },
  "session": {
    "dmScope": "per-channel-peer"
  },
  "hooks": {
    "enabled": true,
    "token": "${HOOK_TOKEN:-change-me}",
    "path": "/hooks"
  },
  "gateway": {
    "mode": "local",
    "bind": "lan",
    "controlUi": {
      "allowInsecureAuth": true
    },
    "auth": {
      "mode": "token",
      "token": "${OPENCLAW_GATEWAY_TOKEN:-change-me}"
    }
  }
}
